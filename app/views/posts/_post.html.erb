<div id="<%= dom_id post %>">

  <div class="card w-96 bg-slate-100 p-3 m-4">
    <div class="card-body">
      <img src="<%= post.image %>" alt="Shibe Image" width="300">
      <h2 class="card-title"><%= post.title %></h2>
      <p><%= post.body %></p>
      <p>
        <%= link_to "詳細", post, class: "rounded-lg py-3 px-5 bg-sky-500 inline-block font-medium" %>
        <%= link_to "編集", edit_post_path(post), class: "rounded-lg py-3 ml-2 px-5 bg-orange-600 inline-block font-medium" %>
      <p>
    </div>
  </div>
</div>
