<div id="<%= dom_id post %>">

  <div class="card w-96 bg-gray-400">
    <div class="card-body">
      <h2 class="card-title"><%= post.title %></h2>
      <p><%= post.body %></p>
    </div>
  </div>

  <% if action_name != "show" %>
    <%= link_to "詳細", post, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "編集", edit_post_path(post), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
