<div class="w-full">
  <% if notice.present? %>
    <p class="bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <%= link_to "投稿する", new_post_path, class: "rounded-lg py-3 px-5 m-3 bg-sky-500 inline-block font-medium" %>

  <div class="flex justify-between items-center p-3">
    <h1 class="font-bold text-4xl">投稿一覧</h1>
  </div>

  <%= render @posts %>  
</div>
